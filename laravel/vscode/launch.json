    "version": "0.2.0",
    "configurations": [

        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            // "hostname": "192.168....",
            "port": 9099,

            // server -> local
            "pathMappings": {
                "/app": "${workspaceRoot}"
            }

            // "log": false

            // xdebug-3.0.0
            // "xdebugSettings": {
            //     "max_children": 10000,
            //     "max_data": 10000,
            //     "show_hidden": 1
            // }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9099
        }
    ]
}